<Window
    x:Class="Avalonia.AnimatedImage.Sample.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ai="clr-namespace:Avalonia.AnimatedImage;assembly=Avalonia.AnimatedImage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sample="clr-namespace:Avalonia.AnimatedImage.Sample"
    Title="Avalonia.AnimatedImage.Sample"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel Margin="5" VerticalSpacing="5">
        <DockPanel DockPanel.Dock="Top" HorizontalSpacing="5">
            <ComboBox
                x:Name="StretchDirectionComboBox"
                ItemsSource="{Binding $parent[sample:MainWindow].StretchDirections}"
                SelectedIndex="2" />
            <ComboBox
                x:Name="StretchComboBox"
                ItemsSource="{Binding $parent[sample:MainWindow].Stretches}"
                SelectedIndex="0" />
            <Button
                Click="Button_OnClick"
                Content="Open"
                DockPanel.Dock="Right" />
            <TextBox x:Name="TextBox" Text="C:\Users\poker\Pictures\[TheAngryNerd101] 134321754.webp" />
        </DockPanel>
        <ai:AnimatedImage
            x:Name="AnimatedImage"
            Margin="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Stretch="{Binding SelectedItem, ElementName=StretchComboBox}"
            StretchDirection="{Binding SelectedItem, ElementName=StretchDirectionComboBox}" />
    </DockPanel>

</Window>
